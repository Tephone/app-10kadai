<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= link_to 'お気に入り一覧', favorites_path%>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.content %></td>        
        <td><%= image_tag blog.image.url %></td>
        <td><%= link_to 'Show', blog_path(blog.id) %></td>
        <% if current_user2.id == blog.user2_id %>
        <td><%= link_to 'Edit', edit_blog_path(blog.id) if current_user2.id == blog.user2_id %></td>  
        <td><%= link_to 'Destroy', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
