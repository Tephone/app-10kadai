<h1>Sign up</h1>
<% if @user2.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user2.errors.count, "error") %> prohibited this <%= @user2.name %> from being saved:</h2>
    <ul>
    <% @user2.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user2, local: true) do |f| %>  
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.label :image %><br>
  <%= f.file_field :image, class: "go_center_image"%><br>
  <%= f.submit "Create my account" %>
<% end %>